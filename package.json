{
  "devDependencies": {
    "hardhat": "^2.13.0",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "^0.0.5",
    "stack-packer": "^1.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "codegen": "stack-packer ./type-defs ./src/types -t ./contracts/test -h ./contracts/test",
    "lint:check": "prettier --check 'src/**/*.sol' && solhint --config ./.solhint.json 'src/**/*.sol'",
    "lint:fix": "prettier --write 'src/**/*.sol'",
    "t": "stack-packer ./type-defs -h",
    "test": "forge test --block-timestamp $(date +%s)"
  }
}
